root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[{*.js,*.json,*.yml}]
indent_size = 2
indent_style = space
quote_type = single

[*.css]
indent_style = space

[*.html]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
indent_style = tab

[Makefile]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
